<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.faezmurshidi.bodyplan">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BodyPlan"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:label, android:theme" >


        <activity
            android:name=".MainSplashScreen"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
        <activity android:name=".About"/>
        <activity android:name=".Emergency"/>
        <activity android:name=".MainTab"/>
        <activity android:name=".Settings"/>
        <activity android:name=".UserProfile"/>
        <activity android:name=".Motivation"/>
        <activity android:name=".FoodScanner"/>
        <activity android:name=".BMI"/>

    </application>

</manifest>
